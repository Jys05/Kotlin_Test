<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.su.kotlin_test">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.baseSyntax.BaseSyntaxActivity"
                  android:label="@string/BaseSyntaxActivity"/>

        <activity android:name=".activity.baseSyntax.DefineFunActivity"
                  android:label="@string/DefineFunActivity"/>

        <activity android:name=".activity.baseSyntax.DefineVarActivity"
                  android:label="@string/DefineVarActivity"/>

        <activity android:name=".activity.baseSyntax.CommentsActivity"
                  android:label="@string/CommentsActivity"/>

        <activity android:name=".activity.baseSyntax.StringTemplatesActivity"
                  android:label="@string/StringTemplatesActivity"/>

        <activity android:name=".activity.baseSyntax.ConditionalExpressionsActivity"
                  android:label="@string/ConditionalExpressionsActivity"/>

        <activity android:name=".activity.baseSyntax.NullableValueActivity"
                  android:label="@string/NullableValueActivity"/>

        <activity android:name=".activity.baseSyntax.TypeChecksActivity"
                  android:label="@string/TypeChecksActivity"/>

        <activity android:name=".activity.baseSyntax.ForAndWhileLoopActivity"
                  android:label="@string/ForAndWhileLoopActivity"/>

        <activity android:name=".activity.baseSyntax.WhenExpressionActivity"
                  android:label="@string/WhenExpressionActivity"/>

        <activity android:name=".activity.baseSyntax.UseRangesActivity"
                  android:label="@string/UseRangesActivity"/>

        <activity android:name=".activity.baseSyntax.CollectionsActivity"
                  android:label="@string/CollectionsActivity"/>

        <activity android:name=".activity.baseSyntax.CreatingInstancesActivity"
                  android:label="@string/CreatingInstancesActivity"/>

        <!-- Idioms -->
        <activity android:name=".activity.idioms.CreatingDtosActivity"
                  android:label="@string/CreatingDtosActivity"/>
    </application>

</manifest>